<?xml version="1.0" encoding="utf-8"?>
<com.anysoftkeyboard.keyboards.views.KeyboardViewContainerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AnyKeyboardContainerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/candidate_strip_height">

        <com.anysoftkeyboard.keyboards.views.CandidateView
            android:id="@+id/candidate_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Test-only tap proxies overlaying the candidate strip -->
        <com.anysoftkeyboard.keyboards.views.CandidateTapProxyView
            android:id="@+id/test_candidate_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:tag="0"/>

        <com.anysoftkeyboard.keyboards.views.CandidateTapProxyView
            android:id="@+id/test_candidate_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:tag="1"/>

        <com.anysoftkeyboard.keyboards.views.CandidateTapProxyView
            android:id="@+id/test_candidate_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:tag="2"/>
    </FrameLayout>

    <com.anysoftkeyboard.keyboards.views.AnyKeyboardView
        android:id="@+id/AnyKeyboardMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.anysoftkeyboard.keyboards.views.KeyboardViewContainerView>

